@model Lab3_WebApp.Models.Review
@{
    ViewBag.Title = "Create a Review";
}

<div class="container my-5">
    <form asp-controller="Movie" asp-action="CreateReview" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="grid-container">
            <div class="form-group">
                <label asp-for="Comment">Comment: </label>
                <textarea class="form-control" type="text" asp-for="Comment" ></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Rating">Rating: </label>
                <input class="form-control" type="number" asp-for="Rating" />
            </div>
        </div>
        <button class="btn btn-primary col-sm-4" type="submit">Create</button>

        <div class="mt-5">
            <p>Let's give us your feedbacks!</p>
        </div>
    </form>
</div>