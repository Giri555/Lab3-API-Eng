@model Login
@{
    ViewBag.Title = "Login";
}

<div class="container my-5">
    <form asp-controller="Account" asp-action="Login" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="grid-container">
            <div class="form-group">
                <label asp-for="Email">Email: </label>
                <input class="form-control" type="text" asp-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password: </label>
                <input class="form-control" type="password" asp-for="Password" />
            </div>

        </div>

        <button class="btn btn-primary col-sm-4" type="submit">Login</button>

        <div class="mt-5">
            <p>Don't already have an account? Please register for one!</p>
            <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </div>
    </form>
</div>